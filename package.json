{
  "name": "currencynet",
  "version": "1.0.9",
  "description": "A simple currency manager for the net project",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "author": "Chibueze Aniezeofor (codad5)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codad5/currencynet-package.git"
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run prettier"
  },
  "keywords": [
    "react",
    "typescript",
    "awesome-project",
    "currencynet",
    "currencynet-package",
    "currencynet-package-react",
    "currencynet-package-react-typescript",
    "currency converter",
    "currency converter react"
  ],
  "devDependencies": {
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.7",
    "@types/react": "^18.0.17",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^28.1.3",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^28.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
